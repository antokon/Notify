<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antonio.notify.Main2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Create New Notification for this location"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editmessage"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editname"
        android:layout_alignStart="@+id/editname"
        android:layout_below="@+id/editname"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editmessage"
        android:layout_alignLeft="@+id/editname"
        android:layout_alignStart="@+id/editname"
        android:layout_marginBottom="45dp"
        android:text="Notification Title" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editmessage"
        android:layout_alignStart="@+id/editmessage"
        android:layout_below="@+id/editname"
        android:layout_marginTop="35dp"
        android:text="Message" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_viewAll"
        android:layout_alignBottom="@+id/btn_viewAll"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/pos1"
        android:layout_toRightOf="@+id/pos1"
        android:text="Save" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/editText_id"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/pos1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pos"
        android:layout_alignStart="@+id/pos"
        android:layout_below="@+id/pos" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editmessage"
        android:layout_alignStart="@+id/editmessage"
        android:layout_below="@+id/editmessage"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_id"
        android:layout_alignStart="@+id/editText_id"
        android:layout_below="@+id/editmessage"
        android:text="Input ID"
        android:visibility="invisible" />



    <Button
        android:id="@+id/btn_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pos1"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/editText_id"
        android:layout_toStartOf="@+id/editText_id"
        android:text="Show All" />

</RelativeLayout>
